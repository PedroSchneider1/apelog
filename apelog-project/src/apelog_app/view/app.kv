<MainController>:
    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.1, 1  # cinza claro (debug)
        Rectangle:
            pos: self.pos
            size: self.size

    orientation: "vertical"

    # BARRA DE MENUS (nova)
    BoxLayout:
        orientation: "horizontal"
        size_hint_y: None
        height: "30dp"
        md_bg_color: 0.12, 0.12, 0.15, 1
        spacing: 0
        padding: [0, 0, 0, 0]

        # Menu File
        MDFlatButton:
            id: file_menu_button
            text: "File"
            on_release: root.open_file_menu()
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            size_hint_x: None
            width: "60dp"

        # Menu Tools  
        MDFlatButton:
            id: tools_menu_button
            text: "Tools"
            on_release: root.open_tools_menu()
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            size_hint_x: None
            width: "60dp"

        # Menu Help
        MDFlatButton:
            id: help_menu_button
            text: "Help"
            on_release: root.open_help_menu()
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            size_hint_x: None
            width: "60dp"

        Widget:
            size_hint_x: 1
            
    # CONTEÚDO PRINCIPAL (fica acima da barra)
    BoxLayout:
        orientation: "horizontal"

        # LADO ESQUERDO
        BoxLayout:
            orientation: "vertical"
            size_hint_x: 0.25
            padding: "10dp"
            spacing: "8dp"

            canvas.before:
                Color:
                    rgba: 0.15, 0.15, 0.18, 0.9
                RoundedRectangle:
                    radius: [10, 0, 0, 10]
                    pos: self.pos
                    size: self.size

                Color:
                    rgba: 0.3, 0.3, 0.35, 1
                Line:
                    width: 1.2
                    rounded_rectangle: (self.x, self.y, self.width, self.height, 10)

            Label:
                text: "Lista de Áudios"
                size_hint_y: None
                height: "40dp"
                font_size: "18sp"
                bold: True
                color: 1, 1, 1, 1

            RelativeLayout:
                RecycleView:
                    id: audio_list_view
                    viewclass: "AudioItem"
                    bar_width: "6dp"
                    scroll_type: ['bars', 'content']
                    size_hint: 1, 1

                    canvas.before:
                        Color:
                            rgba: 0.2, 0.2, 0.25, 1
                        RoundedRectangle:
                            radius: [6, 6, 6, 6]
                            pos: self.pos
                            size: self.size

                    RecycleBoxLayout:
                        default_size: None, dp(40)
                        default_size_hint: 1, None
                        size_hint_y: None
                        height: self.minimum_height
                        orientation: "vertical"

        # LADO DIREITO
        BoxLayout:
            orientation: "vertical"
            size_hint_x: 0.7

            canvas.before:
                Color:
                    rgba: 1, 1, 0, 1  # amarelo (debug)
                Line:
                    width: 1.5
                    rectangle: self.x, self.y, self.width, self.height

            # CONTAINER DO ESPECTROGRAMA
            RelativeLayout:
                id: spectrogram_container
                size_hint_y: 0.5

                # Imagem do espectrograma
                Image:
                    id: spectrogram
                    source: "placeholder.png"
                    allow_stretch: True
                    keep_ratio: False

                # Camada por cima (agulhas/marcadores)
                FloatLayout:
                    id: marker_layer

            Label:
                text: "Eventos"
                size_hint_y: None
                height: "30dp"

            GridLayout:
                cols: 3
                size_hint_y: 0.5

                Label:
                    text: "Time"
                Label:
                    text: "Title"
                Label:
                    text: "Description"

    # BARRA INFERIOR
    MDBoxLayout:
        orientation: "horizontal"
        size_hint_y: None
        height: "60dp"
        md_bg_color: 0.1, 0.1, 0.1, 1
        padding: [0, 5]
        spacing: "15dp"

        Widget:  # espaço à esquerda
            size_hint_x: 0.3

        BoxLayout:
            orientation: "horizontal"
            size_hint_x: None
            width: self.minimum_width
            spacing: "15dp"

            MDIconButton:
                icon: "play"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                on_release: root.on_play_button_pressed()
            MDIconButton:
                icon: "pause"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                on_release: root.on_pause_button_pressed()
            MDIconButton:
                icon: "skip-previous"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                on_release: root.on_previous_button_pressed()
            MDIconButton:
                icon: "skip-next"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                on_release: root.on_next_button_pressed()
            MDIconButton:
                icon: "plus"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                on_release: root.on_add_button_pressed()

        Widget:  # espaço à direita
            size_hint_x: 0.3


<AudioItem@Button>:
    text: root.text
    halign: "left"
    theme_text_color: "Custom"
    text_color: 1, 1, 1, 1
    md_bg_color: 0.15, 0.15, 0.2, 1
    on_release:
        app.root.on_audio_select(self.text)
